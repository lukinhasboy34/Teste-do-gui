<div class="collapse mt-4">
    <main role="main">
        <div class="row">
            <div class="col">
               <h1>Orders</h1> 
               <div class="table-responsive-sm"></div>

               <table class="table table-striped">
                  <thead>
                     <tr>
                        <th>Id</th>
                        <th>Order</th>
                        <th>Total</th>
                        <th></th>
                     </tr> 
                  </thead>
                  <tbody>
                     {{#each Order}} 
                       <tr>
                           <td>{{this. id}}</td>
                           <td>{{this. Order}}</td>
                           <td>{{this.Total}}</td>
                           <td>
                            <a  class="btn btn-primary" href="/order/{{this._id}}">Update</a>
                            <a  class="btn btn-danger" href="/order/delete/{{this._id}}">Delete/a>
                           </td>
                       </tr>
                     {{/each}}
                  </tbody>
               </table>

            </div>

        </div>

